@article{Kent1995,
Author = {Kent, ML and Higgins, M and Whitaker, DJ and Yokoyama, H},
Title = {{PROLIFERATIVE KIDNEY-DISEASE AND SPHAEROSPORA-ONCORHYNCHI IN WILD-CAUGHT
   SALMONIDS FROM THE PUNTLEDGE RIVER SYSTEM, VANCOUVER-ISLAND,
   BRITISH-COLUMBIA}},
Journal = {{CANADIAN JOURNAL OF FISHERIES AND AQUATIC SCIENCES}},
Year = {{1995}},
Volume = {{52}},
Number = {{1}},
Pages = {{13-17}},
Abstract = {{Proliferative kidney disease (PKD), caused by the PKX myxosporean, was
   observed in kokanee salmon (non-anadromous sockeye salmon) (Oncorhynchus
   nerka) and chinook salmon (O. tshawytscha) collected from the Puntledge
   River, Vancouver Island, British Columbia in July 1993. This is the
   first report of a natural infection of PKX in either captive or wild
   sockeye salmon. All 14 underyearling kokanee salmon and the one
   underyearling chinook salmon exhibited numerous PKX organisms and
   associated chronic inflammation in the renal interstitium. Thirty-eight
   percent of sexually mature kokanee salmon collected in the autumn of
   1993 from Comox Lake (which drains into the Puntledge River) were
   infected with Sphaerospora oncorhynchi, Kent, Whitaker and Margolis,
   1993 in the renal tubules, while immature cutthroat trout (O. clarki)
   and coho salmon (O. kisutch) from the same collection did not exhibit
   myxosporean spores in the kidney. The kidneys of threespine stickleback
   (Gasterosteus aculeatus) and prickly sculpin (Cottus asper) collected
   from the Puntledge River during the summer were all infected with a
   Myxobilatus sp., but no organisms suggestive of PKX or Sphaerospora were
   observed. This study further supports the hypothesis that PKX is a
   developmental stage of S. oncorhynchi, which may sporulate only in
   sexually mature salmonids.
   La maladie proliferative du rein, causée par la myxosporidie PKX, a été observée chez des spécimens de kokani (saumon rouge non anadrome) (Oncorhynchus nerka) et de quinnat (O. tshawytscha) prélevés dans la rivière Puntledge, dans l'île de Vancouver, en juillet 1993. C'est la première fois qu'on signale une infection naturelle au PKX chez des saumons sauvages ou en captivité. Les 14 kokanis de moins d'un an et le quinnat du même âge présentaient de nombreux organismes PKX, ainsi que l'inflammation chronique du tissu interstitiel rénal qui est associée à leur présence. Chez les kokanis sexuellement matures prélevés à l'automne 1993 dans le lac Comox (dont la Puntledge est l'exutoire), 38% étaient infectés par Sphaerospora oncorhynchi Kent, Whitaker et Margolis, 1993 dans les tubules rénaux, tandis que les immatures de truite fardée (O. clarki) et de coho (O. kisutch) prélevés en même temps ne présentaient pas de spores de myxosporidies dans les reins. Les reins des épinoches à trois épines (Gasterosteus aculeatus) et des chabots piquants (Cottus asper) recueillis dans la Puntledge pendant l'été étaient tous infectés par un Myxobilatus sp., mais aucun organisme ressemblant au PKX ou au Sphaerospora n'a été observé. Notre étude vient conforter l'hypothèse selon laquelle le PKX serait un stade de développement de S. oncorhynchi, qui semble ne sporuler que chez les salmonidés sexuellement matures. [Traduit par la Rédaction]}},
ISSN = {{0706-652X}},
Unique-ID = {{ISI:A1995RW48200005}},
}

