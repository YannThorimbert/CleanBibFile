keywords = {Benthic production,Eutrophication,Freshwater bryozoans,Microbial food resources,Statoblasts},
number = {11},
pages = {2320--2334},
title = {{Bryozoan populations reflect nutrient enrichment and productivity gradients in rivers}},
volume = {54},
year = {2009}
